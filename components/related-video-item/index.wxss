/* components/related-video-item/index.wxss */
.item {
  display: flex;
  justify-content: space-between;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}
.album {
  position: relative;
  width: 42%;
  display: flex;
  overflow: hidden;
}

.album .image {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}

.album .play-counter {
  position: absolute;
  left: 0;
  bottom: 0rpx;
  color: #fff;
  font-size: 22rpx;
  border-radius: 12rpx;
  padding: 6rpx 10rpx;
  background: rgba(0,0,0,.5);
}
.content {
  padding: 24rpx;
  flex: 1;
  overflow: hidden;
}

.content-title {
  font-size: 26rpx;
}

.content-author {
  font-size: 20rpx;
  color: #999;
  width: 100%;
  margin-top: 6rpx;
}
