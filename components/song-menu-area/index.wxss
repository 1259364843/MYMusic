/* components/song-menu-area/index.wxss */
.menu-list {
  /* 视口高度 */
  width: 100vw;
  /* 不换行 */
  white-space: nowrap;
  position: relative;
  left: -20rpx;
}

.menu-item {
  /* 行内块元素 */
  display: inline-block;
  vertical-align: top;
  width: 220rpx;
  margin-left: 20rpx;
}

.menu-item:last-of-type {
  margin-right: 20rpx;
}

